<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true">


        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            >


            <RelativeLayout
                android:id="@+id/rel_first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/top_img"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginLeft="-260dp"
                    android:layout_marginTop="-45dp"
                    android:layout_marginRight="100dp"
                    android:src="@drawable/top_img" />

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignBottom="@id/top_img"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/final_logo" />


            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/im_bottom"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="-50dp"
                android:layout_marginRight="-100dp"
                android:layout_marginBottom="-8dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_img_dark" />


            <ImageView
                android:id="@+id/im_bottom_light"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="-80dp"
                android:layout_marginRight="-100dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_img_light" />


        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rel"
            android:layout_marginTop="-10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/tv_show_signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    style="@style/fontRegular"
                    android:layout_marginLeft="30dp"
                    android:paddingRight="20dp"
                    android:text="@string/welcome"

                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_show_signin"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    style="@style/fontRegular"
                    android:text="@string/login_to_continue"
                    android:textSize="14dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_login"
                    android:layout_alignLeft="@+id/tv_show_signin"
                    android:layout_marginTop="20dp"

                    android:layout_marginRight="30dp"
                    app:boxCornerRadiusBottomEnd="50dp"
                    app:boxCornerRadiusBottomStart="50dp"
                    app:boxCornerRadiusTopEnd="50dp"
                    app:boxCornerRadiusTopStart="50dp">

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawableLeft="@mipmap/ic_account_outline_grey600_24dp"
                        android:drawablePadding="15dp"
                        android:focusableInTouchMode="true"
                        android:gravity="left"
                        style="@style/fontRegular"
                        android:hint="@string/emailusername"
                        android:maxLength="30"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <!--                <View-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="1dp"-->
                    <!--                    android:layout_marginTop="5dp"-->
                    <!--                    android:background="@color/yellow" />-->
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pass_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email_layout"
                    android:layout_alignLeft="@+id/tv_show_signin"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    app:boxCornerRadiusBottomEnd="50dp"
                    app:boxCornerRadiusBottomStart="50dp"
                    app:boxCornerRadiusTopEnd="50dp"
                    app:boxCornerRadiusTopStart="50dp">

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"

                        android:background="@null"
                        android:drawableLeft="@mipmap/ic_lock_outline_grey600_24dp"
                        android:drawablePadding="15dp"
                        android:focusableInTouchMode="true"
                        style="@style/fontRegular"
                        android:gravity="left"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:maxLength="10"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <!--                <View-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="1dp"-->
                    <!--                    android:layout_marginTop="5dp"-->
                    <!--                    android:background="@color/yellow" />-->
                </com.google.android.material.textfield.TextInputLayout>

                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@id/pass_layout"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    style="@style/fontRegular"
                    android:text="@string/remenberpasword"
                    android:textSize="15dp" />
                <!--          <View-->
                <!--              android:id="@+id/view2"-->
                <!--              android:layout_width="1dp"-->
                <!--              android:layout_height="30dp"-->
                <!--              android:background="@color/red"-->
                <!--              android:layout_toRightOf="@+id/checkbox"-->
                <!--              android:layout_below="@id/pass_layout"-->
                <!--              android:layout_marginLeft="10dp"-->
                <!--              android:layout_marginTop="44dp"/>-->
                <TextView
                    android:id="@+id/tv_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@id/pass_layout"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginRight="25dp"
                    style="@style/fontRegular"
                    android:paddingTop="3dp"
                    android:text="@string/forgotpass"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/tv_forgot_password"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    style="@style/fontRegular"
                    android:background="@drawable/bothsidecorner"
                    android:drawableRight="@mipmap/ic_arrow_right_white_24dp"
                    android:paddingRight="10dp"
                    android:text="@string/signin"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <RelativeLayout
                    android:id="@+id/account_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_login"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp">


                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Don't have an account ? "

                        style="@style/fontRegular"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/text1"
                        android:text="Create"
                        style="@style/fontRegular"
                        android:textColor="@color/colorPrimary"

                        android:textSize="15dp" />

                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</layout>