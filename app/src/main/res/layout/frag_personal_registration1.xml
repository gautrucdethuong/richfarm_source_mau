        <ImageView
            android:id="@+id/top_img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="-260dp"
            android:layout_marginTop="-55dp"
            android:layout_marginRight="100dp"
            android:src="@drawable/top_img" />

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_arrow_left_white_24dp"
            android:tint="@color/black"
            android:layout_marginTop="5dp"

            />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignBottom="@id/top_img"
            android:layout_marginBottom="40dp"
            android:src="@drawable/final_logo" />



        <TextView
            android:id="@+id/tv_show_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/top_img"
            android:layout_marginLeft="30dp"
            android:paddingRight="30dp"
            android:text="Sign Up"
            style="@style/fontRegular"
            android:layout_marginTop="-30dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_show_signin"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            style="@style/fontRegular"
            android:layout_marginBottom="10dp"
            android:text="Create your account"
            android:textSize="15dp" />

