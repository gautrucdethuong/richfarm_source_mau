        android:layout_height="match_parent"
        android:focusable="true"
        android:clickable="true"
        android:background="@color/white"
       >

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="150dp">


            <ImageView
                android:id="@+id/top_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/welcome_text"
                android:layout_marginLeft="-280dp"
                android:layout_marginRight="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/top_img" />

            <ImageView
                android:id="@+id/im_drawer"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_menu_black_24dp"
                android:paddingTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_heading"
                android:text="Appointment"
                android:layout_alignBottom="@+id/top_img"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"/>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/im_bottom"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="-50dp"
                android:layout_marginRight="-100dp"
                android:layout_marginBottom="-8dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_img_dark" />


            <ImageView
                android:id="@+id/im_bottom_light"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="-80dp"
                android:layout_marginRight="-100dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_img_light" />


        </RelativeLayout>

