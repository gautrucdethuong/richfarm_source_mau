<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">



        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="150dp">


            <ImageView
                android:id="@+id/top_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/welcome_text"
                android:layout_marginLeft="-280dp"
                android:layout_marginRight="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/top_img" />

            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                android:paddingTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_heading"
                android:text="Payment Methods"
                style="@style/fontRegular"
                android:layout_alignBottom="@+id/top_img"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"/>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/im_bottom"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="-50dp"
                android:layout_marginRight="-100dp"
                android:layout_marginBottom="-8dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_img_dark" />


            <ImageView
                android:id="@+id/im_bottom_light"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="-80dp"
                android:layout_marginRight="-100dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_img_light" />


        </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tv_paypal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/paypal_icon"
                android:background="@drawable/rund_corner_edittext"
                android:text="Paypal"
                android:visibility="gone"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/tv_razor"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:padding="12dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/razor_icon"
            android:visibility="gone"
            android:background="@drawable/rund_corner_edittext"
            android:text="RazorPay"
            android:layout_marginRight="20dp" />

        </LinearLayout>

    </RelativeLayout>


</layout>