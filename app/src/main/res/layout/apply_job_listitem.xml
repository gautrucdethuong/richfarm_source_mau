<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/recangle_shape_white">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/im_profile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:civ_border_color="@color/blue_circle_in_image"
                app:civ_border_width="7dp"
                android:layout_marginBottom="10dp" />


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/im_profile"
                android:gravity="left"
                android:text="JOHN DOE"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/im_email"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/im_profile"
                android:src="@mipmap/email"
                android:tint="@color/dark_blue"
                />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/im_email"
                android:text="123456"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/im_address"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_below="@+id/im_email"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/im_profile"
                android:src="@mipmap/ic_map_marker_grey600_24dp"
                android:tint="@color/dark_blue"/>


            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/im_email"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/im_address"
                android:text="indore"
                android:textSize="12dp" />
        </RelativeLayout>
    </RelativeLayout>
</layout>