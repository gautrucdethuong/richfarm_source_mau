<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
    android:background="@color/white"
    android:id="@+id/study_place"
       >



    <RelativeLayout
        android:id="@+id/rel_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >


            <RelativeLayout
                android:id="@+id/rel_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/top_img"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginLeft="-260dp"
                    android:layout_marginTop="-55dp"
                    android:layout_marginRight="100dp"
                    android:src="@drawable/top_img" />

                <ImageView
                    android:id="@+id/im_drawer"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:src="@mipmap/ic_menu_black_24dp" />

                <TextView
                    android:id="@+id/tv_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/top_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="100dp"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Home"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Where would you welcome the classes"
                    android:textColor="@color/black"
                    android:padding="10dp"
                  android:layout_below="@id/tv_heading"
                    android:layout_marginTop="-100dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    />
            </RelativeLayout>
        </RelativeLayout>





        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/im_bottom"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="-50dp"
                android:layout_marginRight="-100dp"
                android:layout_marginBottom="-8dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_img_dark" />


            <ImageView
                android:id="@+id/im_bottom_light"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="-80dp"
                android:layout_marginRight="-100dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_img_light" />


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel"
            android:layout_marginTop="-70dp"
            android:id="@+id/scrollView">
<!--            <android.support.design.widget.CoordinatorLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent">-->
<!--            <android.support.design.widget.AppBarLayout-->
<!--                android:id="@+id/appbar"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:fitsSystemWindows="true"-->
<!--                android:background="@color/white"-->
<!--                >-->
<!--            <android.support.design.widget.CollapsingToolbarLayout-->
<!--                android:id="@+id/collapsing_toolbar"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:fitsSystemWindows="true"-->
<!--                app:collapsedTitleGravity="center"-->
<!--                app:expandedTitleMarginBottom="60dp"-->
<!--                app:layout_scrollFlags="scroll|exitUntilCollapsed">-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/place_option"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/choose_layout"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="4">


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_weight="1"
                            android:id="@+id/st_home">
                            <TextView
                                android:id="@+id/tv_myhome"
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:background="@drawable/recangle_shape_purple"
                                android:text="My Home"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:layout_marginTop="20dp"
                                />
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@mipmap/study_place_home"
                                android:layout_centerHorizontal="true"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="20dp"
                            android:id="@+id/tech_home"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:id="@+id/tv_teacherhome"
                                android:layout_width="110dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/recangle_shape_purple"
                                android:text="Teacher Home"
                                android:textColor="@color/black"
                                android:gravity="center"
                                />
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@mipmap/study_place_teacher"
                                android:layout_centerHorizontal="true"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="20dp"
                            android:id="@+id/public_place">
                            <TextView
                                android:id="@+id/tv_public_place"
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:background="@drawable/recangle_shape_purple"
                                android:text="Public Place"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:layout_marginTop="20dp"
                                />
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@mipmap/study_place_public"
                                android:layout_centerHorizontal="true"
                                />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="20dp"
                            android:id="@+id/st_online">
                            <TextView
                                android:id="@+id/tv_online"
                                android:layout_width="100dp"
                                android:layout_height="80dp"
                                android:background="@drawable/recangle_shape_purple"
                                android:text="Online"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:layout_marginTop="20dp"
                                />
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/online"
                                android:layout_centerHorizontal="true"
                                />
                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>
            </RelativeLayout>
<!--            </android.support.design.widget.CollapsingToolbarLayout>-->
<!--            </android.support.design.widget.AppBarLayout>-->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/place_option"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@mipmap/rectangle_background"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/tv_opencal"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"

                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="@string/choseplace"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_noclass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_opencal"
                        android:layout_centerVertical="true"
                        android:drawableTop="@mipmap/ic_alert_grey600_24dp"
                        android:drawableTint="@color/colorPrimary"
                        android:gravity="center"
                        android:layout_marginTop="50dp"
                        android:text="@string/noteacheravailable"
                        android:textColor="@color/colorPrimary"
                        android:visibility="visible" />

                    <ListView
                        android:id="@+id/lv_places"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/tv_noclass"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:divider="@null"
                        android:dividerHeight="5dp"
                        android:smoothScrollbar="true"
                        android:visibility="gone"></ListView>

<!--                    <ProgressBar-->
<!--                        android:id="@+id/progressBar"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_below="@+id/lv_places"-->
<!--                        android:layout_alignParentBottom="true"-->
<!--                        android:layout_centerHorizontal="true"-->
<!--                        android:layout_marginTop="5dp"-->
<!--                        android:layout_marginBottom="10dp"-->
<!--                        android:visibility="gone" />-->

                    <RelativeLayout
                        android:id="@+id/map_layout"
                        android:layout_width="match_parent"
                        android:layout_height="550dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="10dp"
                        android:visibility="gone">

                        <fragment
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp" />
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
            <!--            </android.support.design.widget.CoordinatorLayout>-->
<!--        </RelativeLayout>-->
    </RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>
</layout>