                android:layout_marginRight="-30dp"

                >


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/background_cross" />


            </RelativeLayout>


