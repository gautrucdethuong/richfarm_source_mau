<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@color/yellow"
              >
<ImageView
    android:layout_width="40dp"
    android:layout_height="30dp"
    android:id="@+id/im_back"
    android:src="@mipmap/ic_arrow_left_white_24dp"
    android:layout_marginTop="16dp"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="5dp"
    android:layout_marginStart="5dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sender_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/im_back"
        android:layout_toEndOf="@+id/im_back"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/tv_sendername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/sender_img"
        android:layout_toEndOf="@+id/sender_img"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textSize="15dp"/>
<ImageView
    android:id="@+id/im_option"
    android:layout_width="40dp"
    android:layout_height="30dp"
    android:src="@mipmap/ic_dots_vertical_white_24dp"
    android:layout_alignParentRight="true"
    android:layout_marginRight="10dp"
    android:layout_marginTop="16dp"
    android:visibility="gone"/>
</RelativeLayout>
</layout>