<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/recangle_shape_white"
            android:id="@+id/borderlayout">
            <RelativeLayout
                android:id="@+id/class_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/im_profile"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/default_user"
                    app:civ_border_color="@color/blue_circle_in_image"
                    app:civ_border_width="7dp"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:id="@+id/tv_class"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Manoj Kumar Mathankar"
                    android:layout_toRightOf="@+id/im_profile"
                    android:layout_marginLeft="10dp"
                    android:maxLength="15"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:gravity="left"
                    />
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="classess for abc"
                    android:layout_toRightOf="@+id/im_profile"
                    android:layout_alignLeft="@+id/tv_class"
                    android:layout_below="@+id/tv_class"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="classess for abc"
                    android:layout_toRightOf="@+id/im_profile"
                    android:layout_alignLeft="@+id/tv_date"
                    android:layout_below="@+id/tv_date"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:id="@+id/tv_paidclass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tv_time"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:text=""
                    android:textSize="12dp"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/flag"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:text="$14.00"
                android:textStyle="bold"
                >
            </TextView>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/class_info"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:background="#e1e1e1"
                android:id="@+id/action_layout"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/tv_cancel"
                    android:textColor="@color/black"
                    android:text="Cancel"
                    android:drawableLeft="@drawable/cancel"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/tv_complete"
                    android:textColor="@color/black"
                    android:text="Complete"
                    android:drawableLeft="@drawable/confirm"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:layout_toLeftOf="@+id/tv_cancel"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/tv_join_class"
                    android:textColor="@color/black"
                    android:text="Join Class"
                    android:drawableLeft="@drawable/confirm"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:layout_toLeftOf="@+id/tv_complete"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:text="Give Rating"
                    android:textColor="@color/black"
                    android:id="@+id/tv_rate"
                    android:visibility="gone"
                    android:drawableLeft="@mipmap/ic_star_grey600_24dp"
                    android:drawableTint="@color/colorPrimary"
                    android:drawablePadding="10dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>