<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/loginreg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="150dp">


            <ImageView
                android:id="@+id/top_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginLeft="-280dp"
                android:layout_marginRight="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/top_img" />


            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/top_img"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                style="@style/fontRegular"
                android:text="Welcome to Education App"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/im_language"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/enar" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom"
            android:layout_below="@id/header">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="200dp"

                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:src="@drawable/logo_img" />



            <TextView
                android:id="@+id/tv_signin"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/logo"
                style="@style/fontRegular"
                android:layout_marginTop="20dp"
                android:background="@drawable/bothsidecorner"
                android:drawableEnd="@mipmap/ic_arrow_right_white_24dp"
                android:gravity="center"
                android:paddingRight="5dp"
                android:text="@string/signin"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/tv_signup"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/tv_signin"
                style="@style/fontRegular"
                android:background="@drawable/bothsidecornerwhite"
                android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                android:gravity="center"
                android:paddingRight="5dp"
                android:text="@string/signup"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="15dp" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/im_bottom"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="-50dp"
                android:layout_marginRight="-100dp"
                android:layout_marginBottom="-8dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_img_dark" />


            <ImageView
                android:id="@+id/im_bottom_light"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="-80dp"
                android:layout_marginRight="-100dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_img_light" />


        </RelativeLayout>
    </RelativeLayout>
</layout>

