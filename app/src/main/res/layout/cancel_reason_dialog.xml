<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">



    <RelativeLayout
        android:id="@+id/rel_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/top_img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="-260dp"
            android:layout_marginTop="-55dp"
            android:layout_marginRight="100dp"
            android:src="@drawable/top_img" />

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="30dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/tv_cancel_reson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/top_img"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Cancellation Reason"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>





    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/im_bottom"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-50dp"
            android:layout_marginRight="-100dp"
            android:layout_marginBottom="-8dp"
            android:scaleType="fitXY"
            android:src="@drawable/bottom_img_dark" />


        <ImageView
            android:id="@+id/im_bottom_light"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-80dp"
            android:layout_marginRight="-100dp"
            android:scaleType="fitXY"
            android:src="@drawable/bottom_img_light" />


    </RelativeLayout>













    <include layout="@layout/spinnerlayout"
        android:id="@+id/reason_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_first"
       android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />
    <RelativeLayout
        android:id="@+id/et_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="5dp"
        android:layout_below="@id/reason_spinner"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/recangle_shape_purple"
        >
        <EditText
            android:id="@+id/et_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:hint="Enter Reason Here"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:maxLength="200"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_send"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/bothsidecorner"
        android:textColor="@color/white"
        android:text="SEND"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_layout"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />
</RelativeLayout>
