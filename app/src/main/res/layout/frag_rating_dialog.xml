<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rel_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/rating_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignBottom="@id/top_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@mipmap/rating"

            />

        <ImageView
            android:id="@+id/top_img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginLeft="-260dp"
            android:layout_marginTop="-55dp"
            android:layout_marginRight="100dp"
            android:src="@drawable/top_img" />

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_arrow_left_white_24dp"
            android:tint="@color/black" />


        <TextView
            android:id="@+id/tv_next"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Next"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="gone" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/im_bottom"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-50dp"
            android:layout_marginRight="-100dp"
            android:layout_marginBottom="-8dp"
            android:scaleType="fitXY"
            android:src="@drawable/bottom_img_dark" />


        <ImageView
            android:id="@+id/im_bottom_light"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-80dp"
            android:layout_marginRight="-100dp"
            android:scaleType="fitXY"
            android:src="@drawable/bottom_img_light" />


    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel_first">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:text="Rating"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/tv_heading"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:numStars="5" />

            <View
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/rating"
                android:background="#57C3BE"/>
            <View
                android:layout_width="150dp"
                android:layout_height="2dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/rating"
                android:background="#57C3BE"/>

            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rating"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="FEEDBACK"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/et_layout"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/tv_feedback"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
              android:background="@drawable/recangle_shape_purple"
                android:elevation="5dp"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/et_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@null"
                    android:hint="Enter Feedback Here"

                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@+id/et_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/bothsidecorner"
                android:gravity="center"
                android:text="SEND"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
