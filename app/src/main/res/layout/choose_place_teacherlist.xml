<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/recangle_shape"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/info_layout">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/im_profile"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="1dp"
                    android:src="@drawable/noimage"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_class"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="classess for abc"
                    android:layout_toRightOf="@+id/im_profile"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"
                    />
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="classess for abc"
                    android:layout_toRightOf="@+id/im_profile"
                    android:layout_alignLeft="@+id/tv_class"
                    android:layout_below="@+id/tv_class"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="classess for abc"
                    android:layout_toRightOf="@+id/im_profile"
                    android:layout_alignLeft="@+id/tv_date"
                    android:layout_below="@+id/tv_date"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    />
                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@+id/tv_time"
                    android:layout_toRightOf="@+id/im_profile"
                    android:layout_marginTop="5dp"
                    android:layout_alignLeft="@+id/tv_class"
                    android:layout_marginBottom="10dp"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:numStars="5"
                    android:visibility="gone"
                    />
<!--                <ImageView-->
<!--                    android:id="@+id/im_quality"-->
<!--                    android:layout_width="20dp"-->
<!--                    android:layout_height="20dp"-->
<!--                    android:src="@mipmap/dollor"-->
<!--                    android:layout_alignLeft="@+id/rating"-->
<!--                    android:layout_below="@+id/rating"-->
<!--                    />-->
<!--                <TextView-->
<!--                    android:id="@+id/tv_quality_rating"-->
<!--                    android:layout_width="150dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@+id/rating"-->
<!--                    android:layout_toRightOf="@+id/im_quality"-->
<!--                    android:text=""-->
<!--                    android:paddingLeft="5dp"-->
<!--                    />-->
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bothsidecorner"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="$14.00"
                android:textSize="10dp"
                android:textStyle="bold"
                >
            </TextView>
        </RelativeLayout>
    </RelativeLayout>
</layout>
