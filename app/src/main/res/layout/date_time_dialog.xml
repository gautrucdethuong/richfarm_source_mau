<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white"
    >




        <RelativeLayout
            android:id="@+id/rel_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">







            <ImageView
                android:id="@+id/top_img"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="-260dp"
                android:layout_marginTop="-55dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/top_img" />



            <ImageView
                android:id="@+id/im_back"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_arrow_left_white_24dp"
                android:layout_marginLeft="8dp"
               android:tint="@color/black"
                android:layout_margin="10dp"
                />


            <TextView
                android:id="@+id/tv_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="dsfgv"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/tv_next"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:text="Next"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:visibility="gone"
                />

        </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/im_bottom"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-50dp"
            android:layout_marginRight="-100dp"
            android:layout_marginBottom="-8dp"
            android:scaleType="fitXY"
            android:src="@drawable/bottom_img_dark" />


        <ImageView
            android:id="@+id/im_bottom_light"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-80dp"
            android:layout_marginRight="-100dp"
            android:scaleType="fitXY"
            android:src="@drawable/bottom_img_light" />


    </RelativeLayout>







    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel_first"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-50dp"

        android:id="@+id/scrollView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/rectangle_background"
            android:layout_marginBottom="20dp"
           >
            <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/in_date"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:hint="Select Date"
        android:editable="false"
        android:focusable="false"
        />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/have_class"
                android:layout_below="@+id/in_date"
                android:focusableInTouchMode="true"
                android:focusable="true">
                <include
                    android:id="@+id/available_timeslote"
                    layout="@layout/teacher_availibility_timeslot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/tv_starttime"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@drawable/recangle_shape"
                    android:layout_below="@+id/available_timeslote"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:text="Start Time"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:visibility="invisible"
                    />
                <EditText
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/in_time"
                    android:layout_below="@+id/available_timeslote"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="Start Time"
                    android:editable="false"
                    android:focusable="false"
                    android:layout_marginTop="30dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/im_cancel_starttime"
                    android:layout_alignTop="@+id/in_time"
                    android:layout_toRightOf="@+id/in_time"
                    android:src="@mipmap/ic_close_circle_grey600_24dp"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/tv_endtime"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@drawable/recangle_shape"
                    android:layout_below="@+id/available_timeslote"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="End Time"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:visibility="invisible"
                    />
                <EditText
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/in_end_time"
                    android:layout_below="@+id/available_timeslote"
                    android:hint="End Time"
                    android:editable="false"
                    android:layout_toLeftOf="@+id/im_cancel_endtime"
                    android:focusable="false"
                    android:layout_alignTop="@+id/in_time"
                    android:layout_marginRight="10dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/im_cancel_endtime"
                    android:layout_alignTop="@+id/in_end_time"
                    android:src="@mipmap/ic_close_circle_grey600_24dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:visibility="invisible"
                    />

                <include
                    android:id="@+id/place_type_spinner"
                    layout="@layout/spinnerlayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/in_end_time"
                    android:layout_alignLeft="@+id/in_time"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginRight="20dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/place_type_spinner"
                    android:id="@+id/map_layout"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <fragment android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_map"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/map_layout"/>
                <EditText
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/in_time"
                    android:layout_marginTop="30dp"
                    android:hint="Enter Address"
                    android:layout_below="@+id/tv_map"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:background="@null"
                    android:maxLines="3"
                    />
                <View
                    android:id="@+id/view_l"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/red"
                    android:layout_below="@+id/tv_address"/>
                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/colorPrimary"
                    android:text="cancel"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:textSize="16dp"
                    android:textAllCaps="true"
                    android:layout_below="@+id/view_l"
                    />
                <TextView
                    android:id="@+id/tv_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/colorPrimary"
                    android:text="ok"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/tv_empty"
                    android:layout_marginTop="20dp"
                    android:textSize="16dp"
                    android:textAllCaps="true"
                    android:layout_below="@+id/view_l"
                    />
                <TextView
                    android:id="@+id/tv_empty"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tv_ok"
                    android:layout_below="@+id/view_l"
                    />
            </RelativeLayout>
            <include layout="@layout/teacher_nothave_timeslote"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/have_class"
                android:layout_marginTop="10dp"
                android:id="@+id/notavailable_layout"
                android:visibility="invisible"
                >
            </include>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
