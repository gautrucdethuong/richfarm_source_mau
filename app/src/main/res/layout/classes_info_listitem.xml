<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        >


        <RelativeLayout
            android:id="@+id/borderlayout"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/recangle_shape_white">

            <RelativeLayout
                android:id="@+id/class_info"
                android:layout_width="match_parent"
                android:layout_height="110dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/im_profile"
                    android:layout_width="80dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"

                    android:src="@drawable/st"
                    app:civ_border_color="@color/blue_circle_in_image"
                    app:civ_border_width="7dp" />

                <TextView
                    android:id="@+id/tv_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/im_profile"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLength="15"
                    android:text="Manoj Kumar Mathankar"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_class"
                    android:layout_alignLeft="@+id/tv_class"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/im_profile"
                    android:text="classess for abc"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_date"
                    android:layout_alignLeft="@+id/tv_date"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/im_profile"
                    android:text="classess for abc"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_paidclass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_time"
                    android:layout_alignLeft="@+id/tv_date"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:text=""
                    android:textColor="@color/red" />

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_start_class"
                    android:layout_width="90dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/recangle_shape"
                    android:backgroundTint="@color/black"
                    android:gravity="center"
                    android:text="Start Class"
                    android:textColor="@color/black"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_complete"
                    android:layout_width="90dp"
                    android:layout_height="28dp"
                    android:layout_below="@id/tv_start_class"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/recangle_shape"
                    android:backgroundTint="@color/black"
                    android:gravity="center"
                    android:text="Complete"
                    android:textColor="@color/black"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="90dp"
                    android:layout_height="28dp"
                    android:layout_below="@+id/tv_complete"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"

                    android:background="@drawable/recangle_shape"
                    android:backgroundTint="@color/oreange"

                    android:gravity="center"
                    android:text="Cancel"
                    android:textColor="@color/black"
                    android:visibility="visible" />

                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/flag"
                android:backgroundTint="@color/colorPrimary"
                android:paddingTop="10dp"
                android:text="$14.00"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone"></TextView>

            <RelativeLayout
                android:id="@+id/action_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/class_info"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="8dp"
                android:background="#e1e1e1"
                android:visibility="visible">


                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:drawableLeft="@mipmap/ic_star_grey600_24dp"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/yellow"
                    android:gravity="center"
                    android:text="Give Rating"
                    android:textColor="@color/black"
                    android:visibility="visible" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</layout>