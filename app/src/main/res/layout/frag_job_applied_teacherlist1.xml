<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/teacher_list"
       >


        <RelativeLayout
            android:id="@+id/rel_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/top_img"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="-260dp"
                android:layout_marginTop="-55dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/top_img" />

            <ImageView
                android:id="@+id/im_drawer"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_menu_black_24dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/tv_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/top_img"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="100dp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Home"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/blue_circle_bckground"
            android:layout_below="@id/rel_first"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="-20dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/purple_circle_bckground"
            android:layout_alignParentRight="true"
            android:layout_below="@id/rel_first"
            android:layout_marginRight="-20dp"/>



        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/im_bottom"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="-50dp"
                android:layout_marginRight="-100dp"
                android:layout_marginBottom="-8dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_img_dark" />


            <ImageView
                android:id="@+id/im_bottom_light"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="-80dp"
                android:layout_marginRight="-100dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_img_light" />


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rel_first"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-60dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@mipmap/rectangle_background">






            <TextView
                android:id="@+id/tv_noclass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="No data available"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:visibility="gone"
                android:drawableTop="@mipmap/ic_alert_grey600_24dp"
                android:drawableTint="@color/colorPrimary"
                />
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lv_teachers"
                android:divider="@null"
                android:layout_below="@+id/header"
                android:layout_above="@+id/im_ads"
                android:layout_marginBottom="5dp">
            </ListView>

        </RelativeLayout>





















    </RelativeLayout>
</layout>

