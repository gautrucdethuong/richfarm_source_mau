<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:background="@android:color/white">


        <RelativeLayout
            android:id="@id/rel_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_below="@id/top_img"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/change_password" />


            <ImageView
                android:id="@+id/top_img"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="-250dp"
                android:layout_marginRight="90dp"
                android:layout_marginBottom="-90dp"
                android:scaleType="centerCrop"
                android:src="@drawable/top_img" />

            <ImageView
                android:id="@+id/im_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:tint="@color/black"
                app:srcCompat="@mipmap/ic_arrow_left_white_24dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true">


            <ImageView
                android:id="@+id/im_bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="-50dp"
                android:layout_marginRight="-100dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_img_dark" />

            <ImageView
                android:id="@+id/im_bottom_light"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="-80dp"
                android:layout_marginRight="-100dp"
                android:layout_marginBottom="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_img_light" />


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:background="@mipmap/rectangle_background"
            android:layout_below="@id/rel_first"
            >

            <RelativeLayout
                android:id="@+id/rel_second"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >


                <TextView
                    android:id="@+id/change_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:text="Change Password"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/clinicname_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/change_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"

                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    app:boxCornerRadiusBottomEnd="30dp"
                    app:boxCornerRadiusBottomStart="30dp"
                    app:boxCornerRadiusTopEnd="30dp"
                    app:boxCornerRadiusTopStart="30dp"

                    >

                    <EditText
                        android:id="@+id/et_currentpass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/fontRegular"
                        android:layout_marginTop="20dp"
                        android:drawableLeft="@mipmap/ic_lock_outline_grey600_24dp"
                        android:drawablePadding="10dp"
                        android:focusableInTouchMode="true"
                        android:hint="Current Password"
                        android:inputType="textPassword"
                        android:maxLength="10"
                        android:padding="12dp"
                        android:singleLine="true"
                        android:textSize="15dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/clinicphone_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/clinicname_layout"

                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    app:boxCornerRadiusBottomEnd="30dp"
                    app:boxCornerRadiusBottomStart="30dp"
                    app:boxCornerRadiusTopEnd="30dp"
                    app:boxCornerRadiusTopStart="30dp">

                    <EditText
                        android:id="@+id/et_newpass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="20dp"
                        style="@style/fontRegular"
                        android:drawableLeft="@mipmap/ic_lock_outline_grey600_24dp"
                        android:drawablePadding="10dp"
                        android:focusableInTouchMode="true"
                        android:hint="New Password"
                        android:inputType="textPassword"
                        android:maxLength="10"
                        android:padding="12dp"
                        android:singleLine="true"
                        android:textSize="15dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/clinicaddress_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/clinicphone_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    app:boxCornerRadiusBottomEnd="30dp"
                    app:boxCornerRadiusBottomStart="30dp"
                    app:boxCornerRadiusTopEnd="30dp"
                    app:boxCornerRadiusTopStart="30dp">

                    <EditText
                        android:id="@+id/et_confirmpass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="20dp"
                        style="@style/fontRegular"
                        android:drawableLeft="@mipmap/ic_lock_outline_grey600_24dp"
                        android:drawablePadding="10dp"
                        android:focusableInTouchMode="true"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:maxLength="10"
                        android:padding="12dp"
                        android:singleLine="true"
                        android:textSize="15dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/clinicaddress_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bothsidecorner"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="17dp" />
            </RelativeLayout>

        </ScrollView>





    </RelativeLayout>
</layout>