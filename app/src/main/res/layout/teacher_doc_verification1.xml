<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/verification"
        android:clickable="true"
        android:focusable="true">









        <RelativeLayout
            android:id="@+id/rel_first"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            >

            <ImageView
                android:id="@+id/top_img"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="-260dp"
                android:layout_marginTop="-45dp"
                android:layout_marginRight="100dp"
                android:src="@drawable/top_img" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignBottom="@id/top_img"
                android:layout_marginBottom="20dp"
                android:src="@drawable/final_logo" />


        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/im_bottom"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="-50dp"
                android:layout_marginRight="-100dp"
                android:layout_marginBottom="-8dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_img_dark" />


            <ImageView
                android:id="@+id/im_bottom_light"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="-80dp"
                android:layout_marginRight="-100dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_img_light" />


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rel_first"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="15dp"
            android:background="@mipmap/rectangle_background"
            >

            <RelativeLayout
                android:id="@+id/im_verify"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >


                <TextView
                    android:id="@+id/tv_show_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Verification"
                    android:textAllCaps="true"
                    android:layout_marginLeft="30dp"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"/>
                <View

                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="@color/red"
                    android:layout_toRightOf="@+id/tv_show_signup"

                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"/>
                <EditText
                    android:id="@+id/et_institute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_show_signup"
                    android:layout_marginTop="10dp"
                    android:layout_alignLeft="@+id/tv_show_signup"
                    android:drawableRight="@mipmap/ic_account_outline_grey600_24dp"
                    android:hint="@string/InstituteName"
                    android:background="@null"
                    android:paddingTop="12dp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    android:paddingBottom="12dp"
                    android:layout_marginRight="20dp"
                    android:maxLength="100"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_below="@+id/et_institute"
                    android:layout_alignLeft="@+id/tv_show_signup"
                    android:layout_marginRight="20dp"/>
                <EditText
                    android:id="@+id/et_passing_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_institute"
                    android:layout_marginTop="20dp"
                    android:layout_alignLeft="@+id/tv_show_signup"
                    android:layout_marginRight="20dp"
                    android:drawableRight="@mipmap/ic_calendar_blank_grey600_24dp"
                    android:hint="@string/YearOfPassing"
                    android:background="@null"
                    android:paddingTop="12dp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    android:paddingBottom="12dp"
                    android:editable="false"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_below="@+id/et_passing_year"
                    android:layout_alignLeft="@+id/tv_show_signup"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:id="@+id/tv_attach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_experience"
                    android:text="@string/DocumentCopy"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:layout_marginLeft="30dp"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                   />
                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="@color/red"
                    android:layout_toRightOf="@+id/tv_attach"
                    android:layout_below="@+id/et_experience"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"/>
                <TextView
                    android:id="@+id/tv_photo_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/id"
                    android:layout_alignLeft="@+id/im_id_copy"
                    android:layout_below="@+id/tv_attach"
                    android:layout_marginTop="10dp"
                    />
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/im_id_copy"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="70dp"
                    android:layout_below="@+id/tv_attach"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/tv_photoid"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:textAlignment="center"
                    android:layout_below="@+id/tv_photo_id"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="70dp"
                    android:background="@drawable/spiner_border"
                    android:src="@drawable/noimage"
                    android:scaleType="fitXY"
                    />
                <ImageView
                    android:id="@+id/tv_certificate"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="60dp"
                    android:layout_alignTop="@+id/tv_photoid"
                    android:layout_toRightOf="@+id/im_id_copy"
                    android:layout_toEndOf="@+id/im_id_copy"
                    android:background="@drawable/spiner_border"
                    android:src="@drawable/noimage"
                    android:scaleType="fitXY"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/certificate"
                    android:layout_alignLeft="@+id/im_md_certificate"
                    android:layout_below="@+id/tv_attach"
                    android:layout_alignTop="@+id/tv_photo_id"
                    />
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/im_md_certificate"
                    android:layout_marginLeft="60dp"
                    android:layout_alignTop="@+id/im_id_copy"
                    android:layout_toRightOf="@+id/im_id_copy"
                    android:layout_toEndOf="@+id/im_id_copy"
                    android:scaleType="fitXY"/>
                <EditText
                    android:id="@+id/et_qualification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="@string/Qualification"
                    android:background="@null"
                    android:paddingTop="12dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    android:paddingBottom="12dp"
                    android:singleLine="true"
                    android:layout_below="@+id/et_passing_year"
                    android:layout_alignLeft="@+id/tv_show_signup"
                    android:layout_marginRight="20dp"
                    android:drawableRight="@mipmap/ic_book_open_variant_grey600_24dp"
                    android:maxLength="100"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_below="@+id/et_qualification"
                    android:layout_alignLeft="@+id/tv_show_signup"
                    android:layout_marginRight="20dp"/>
                <EditText
                    android:id="@+id/et_experience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et_qualification"
                    android:layout_marginTop="20dp"
                    android:layout_alignLeft="@+id/tv_show_signup"
                    android:layout_marginRight="20dp"
                    android:hint="@string/Experience"
                    android:background="@null"
                    android:paddingTop="12dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    android:paddingBottom="12dp"
                    android:drawableRight="@mipmap/ic_clipboard_text_grey600_24dp"
                    android:maxLength="200"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_below="@+id/et_experience"
                    android:layout_alignLeft="@+id/tv_show_signup"
                    android:layout_marginRight="20dp"/>
                <Button
                    android:id="@+id/btn_verify"
                    android:layout_width="160dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/im_id_copy"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bothsidecorner"
                    android:textColor="@color/black"
                    android:text="@string/submit"
                    android:textAllCaps="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"/>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </layout>